{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES6",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}